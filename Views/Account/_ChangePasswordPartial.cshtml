@using Microsoft.AspNet.Identity
@model Exernet.Models.ManageUserViewModel

<p>@Resources.Resource.LoggedAs <strong>@User.Identity.GetUserName()</strong>.</p>
<div class="row">
    <div class="col-lg-8">
        @using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>@Resources.Resource.ChangePasswordForm</h4>
            <hr />
            @Html.ValidationSummary()
            <div class="form-group">
                <label class="col-md-3 control-label" for="OldPassword">@Resources.Resource.CurrentPassword</label>
                <div class="col-md-9">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label" for="NewPassword">@Resources.Resource.NewPasssword</label>
                <div class="col-md-9">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label" for="ConfirmPassword">@Resources.Resource.ConfirmNewPassword</label>
                <div class="col-md-9">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <input type="submit" value=@Resources.Resource.ChangePassword class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>